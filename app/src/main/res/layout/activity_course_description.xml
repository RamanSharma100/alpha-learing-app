<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDescription"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    >

    <ImageView
        android:id="@+id/courseImageDesc"
        android:layout_width="match_parent"
    android:layout_marginTop="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingEnd="20sp"
        android:paddingBottom="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseImageDesc"
        app:layout_constraintVertical_bias="0"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtnCourseDesc"
            android:layout_width="77dp"
            android:layout_height="38dp"
            android:layout_marginEnd="10sp"
            android:background="@android:color/white"

            android:backgroundTint="@android:color/white"
            android:stateListAnimator="@null"
            app:backgroundTint="#00FFFFFF"
            app:elevation="0dp"
            app:icon="@drawable/icons8_back_arrow_30"
            app:iconGravity="start"
            app:iconSize="40sp"
            app:iconTint="@android:color/black" />

        <TextView
            android:id="@+id/headingCourseDesc"
            android:layout_width="346dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:gravity="center_vertical"
            android:text="Course Name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/descCourseDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="148dp"
        android:text="Course Desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="15sp"
        android:padding="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCourseDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Course"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descCourseDesc"
        app:layout_constraintVertical_bias="0.098" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewCourseDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Course"
        app:layout_constraintBottom_toBottomOf="@+id/btnCourseDesc"
        app:layout_constraintEnd_toStartOf="@+id/btnCourseDesc"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descCourseDesc"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>